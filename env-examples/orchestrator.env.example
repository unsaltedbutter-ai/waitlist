# ==================================================
# orchestrator.env.example
# Copy to ~/.unsaltedbutter/orchestrator.env
# Loaded after shared.env (overrides shared values if needed)
# Runs on: Mac Mini
# ==================================================

# Mac Mini agent endpoint (LAN address)
AGENT_URL=http://192.168.1.100:8421

# Callback server bind address (agent posts results here)
CALLBACK_HOST=0.0.0.0
CALLBACK_PORT=8422

# Local SQLite path for orchestrator state
DB_PATH=orchestrator.db

# Max parallel jobs dispatched to the agent
MAX_CONCURRENT_AGENT_JOBS=2

# Price per cancel/resume action (sats)
ACTION_PRICE_SATS=3000

# Seconds before unpaid invoice marks job as reneged (24h)
PAYMENT_EXPIRY_SECONDS=86400

# Minimum seconds between outreach DMs to the same user (48h)
OUTREACH_INTERVAL_SECONDS=172800

# Path to X25519 private key for credential decryption (sealed boxes)
# Generate with: python3 scripts/generate-credential-keys.py
CREDENTIAL_PRIVATE_KEY_PATH=~/.unsaltedbutter/credential.key

# Timer loop tick interval (seconds)
TIMER_TICK_SECONDS=60
