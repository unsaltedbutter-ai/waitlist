# TTS Service (Mac Studio) - Kokoro-82M via MLX
# Place at ~/.unsaltedbutter/tts.env

# Server
TTS_HOST=0.0.0.0
TTS_PORT=8424

# Voices
AUDIO_TTS_VOICES=af_heart,am_adam
AUDIO_TTS_DEFAULT_VOICE=af_heart

# MP3 encoding (CBR bitrate, passed to ffmpeg -b:a)
# 64k is optimal for mono speech. 96k/128k for higher fidelity.
AUDIO_MP3_BITRATE=64k

# Model (for logging/cache metadata)
TTS_MODEL=kokoro-82m
