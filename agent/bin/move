#!/usr/bin/env python3
"""Move mouse to absolute or relative coordinates with human-like motion."""

import argparse
import os
import sys

sys.path.insert(0, os.path.join(os.path.dirname(__file__), '..', '..'))

from agent.input import mouse


def main():
    parser = argparse.ArgumentParser(description='Move mouse with human-like Bezier curve')
    parser.add_argument('x', type=int, help='X coordinate (or dX with --by)')
    parser.add_argument('y', type=int, help='Y coordinate (or dY with --by)')
    parser.add_argument('--by', action='store_true', help='Move relative to current position')

    args = parser.parse_args()

    if args.by:
        mouse.move_by(args.x, args.y)
    else:
        mouse.move_to(args.x, args.y)


if __name__ == '__main__':
    main()
